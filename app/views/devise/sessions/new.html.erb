<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 custom-margin-form">
      <h1 class="post-title text-center">BLOG</h1>
      <p class="text-center">Share and learn in an easily way!</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-group") do |f| %>
        <div class="field">
          <%= f.email_field :email, placeholder: "Email", autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-md btn-success btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
