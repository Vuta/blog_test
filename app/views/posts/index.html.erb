<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 col-md-offset-2">
      <% @posts.each do |post| %>
        <div class="row">
          <div class="col-md-2"><%= image_tag post.user.avatar, class: "img-responsive img-circle custom-avatar-size" %></div>
          <div class="col-md-10 post-preview">
            <a class="post-title" href="/posts/<%= post.id %>">
              <p><%= post.title.html_safe %></p>
            </a>
            <p>
              <%= truncate(strip_tags(post.content), length: 100) %>
            </p>
          </div >
          <div class="col-md-10 col-md-offset-2">
            <p class="post-meta">Posted by <%= post.user.username %> on <%= post.created_at.strftime("%Y %b %d") %></p>
          </div>
        </div>
        <hr>
      <% end %>
      <%= paginate @posts %>

    </div>
  </div>
</div>

